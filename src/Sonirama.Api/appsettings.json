{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/sonirama-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5432;Database=sonirama;Username=app_user;Password=change_me"
  },
  "Jwt": {
    "Issuer": "Sonirama.Api",
    "Audience": "Sonirama.Client",
    "Key": "CHANGE_THIS_DEVELOPMENT_KEY_TO_A_STRONG_SECRET_1234567890",
    "AccessTokenMinutes": 15,
    "RefreshTokenDays": 7
  },
  "AdminSeed": {
    "Email": "admin@sonirama.local",
    "Password": "Admin123!",
    "Role": "ADMIN",
    "FirstName": "Admin",
    "LastName": "Sonirama"
  },
  "Cors": {
    "Origins": ["http://localhost:3000"]
  },
  "Smtp": {
    "Host": "",
    "Port": 587,
    "User": "",
    "Password": "",
    "FromEmail": "noreply@sonirama.com",
    "FromName": "Sonirama",
    "UseSsl": true,
    "UseConsole": true
  }
}
